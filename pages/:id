<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var banner_repo = getRepoDetailsByName("Pages Banner");
            if (banner_repo) {
                var banner_image = banner_repo.images[0].image_url;
                if (banner_image) {
                    $(".inside_banner").css({ "background": "linear-gradient(0deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2)), #013a80 url(" + banner_image + ") center center no-repeat" });
                }
            }
            
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix + "/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_title').html(data.title.toUpperCase());
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            // check if top header should be shown 
            if (slug == 'aberdeen-faq'){
                $("#tourist_info").show();
            } else if (slug == 'aberdeen-community-bookings') {
                $("#community").show();
            } else if (slug == 'aberdeen-sponsorships-donations') {
                $("#sponsorship").show();
            } else if (slug == 'aberdeen-security') {
                $("#security").show();
            } else if (slug == 'aberdeen-marketing-advertising') {
                $("#marketing").show();
            }
            
            if(_.includes(['aberdeen-faq','aberdeen-community-bookings', 'aberdeen-sponsorships-donations', 'aberdeen-security', 'aberdeen-marketing-advertising'], slug)){
                $("#page_banner").addClass("main_banner");
                $("#page_banner").removeClass("inside_banner");
            } else {
                $("#page_banner").removeClass("main_banner");
                $("#page_banner").addClass("inside_banner");
            }
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>