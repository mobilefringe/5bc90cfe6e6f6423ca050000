<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var banner_repo = getRepoDetailsByName("Guest Services Banner");
            if (banner_repo) {
                var banner_image = banner_repo.images[0].image_url;
                if (banner_image) {
                    $(".main_banner").css({ "background": "linear-gradient(0deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2)), #000 url(" + banner_image + ") center center" });
                }
            }
            
            var prefix = get_prefix();
            //get guest services json
            var g_pages_json = prefix + "/pages/aberdeen-guest-services.json"
            $.getJSON(g_pages_json).done(function(data) {
                $('#mm_page_title').text(data.title);
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                   console.log("Error loading ", g_pages_json);
                }
            }); 
            //get accessibility json
            var a_pages_json = prefix + "/pages/aberdeen-accessibility.json"
            $.getJSON(a_pages_json).done(function(data) {
                $('#mm_page_title_2').text(data.title);
                $('#mm_page_content_2').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                   console.log("Error loading ", a_pages_json);
                }
            }); 
            // get mall walkers json
            var m_pages_json = prefix + "/pages/aberdeen-mall-walkers-club.json"
            $.getJSON(m_pages_json).done(function(data) {
                $('#mm_page_title_3').text(data.title);
                $('#mm_page_content_3').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                   console.log("Error loading ", m_pages_json);
                }
            }); 
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>